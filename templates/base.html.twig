{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="/img/icon.png" type="image/png" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {{ include('nav.html.twig') }}
        
        {% block h1 %}{% endblock %}

        {% block alert %}
            {% for label, messages in app.flashes %}
                <div class="container">
                    <div class="row mt-5">
                        <div class="col-md-12">
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endblock %}

        {% block body %}{% endblock %}

        <div id="footer" class="container-fluid mt-5 pt-4 bg-black bd-t-black">
            <div class="row">
                <div class="col-md-4">
                    <p class="text-center">
                        <img src="/img/logo-small.png" alt="" />
                    </p>
                    <br />
                </div>

                <div class="col-md-4">
                </div>

                <div class="col-md-4">
                    <br /><br /><br />
                    <p class="text-center">Pour me suivre</p>
                    <p class="text-center">
                        <a href="" target="" class="btn btn-social-icon btn-sm btn-facebook">
                            <span class="fa fa-facebook"></span>
                        </a>

                        <a href="" target="" class="btn btn-social-icon btn-sm btn-twitter">
                            <span class="fa fa-twitter"></span>
                        </a>

                        <a href="" target="" class="btn btn-social-icon btn-sm btn-github">
                            <span class="fa fa-github"></span>
                        </a>

                        <a href="" target="" class="btn btn-social-icon btn-sm btn-linkedin">
                            <span class="fa fa-linkedin"></span>
                        </a>
                    </p>
                </div>
            </div>
        </div>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
